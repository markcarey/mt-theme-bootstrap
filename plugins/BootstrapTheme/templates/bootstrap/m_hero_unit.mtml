<div class="hero-unit">
    <mt:If tag="HeroUnitHeadline">
        <h1><mt:HeroUnitHeadline></h1>
    </mt:If>
    <mt:If tag="HeroUnitText">
        <p><mt:HeroUnitText></p>
    </mt:If>
    <mt:If tag="HeroUnitButtonLabel">
        <p>
            <a href="<mt:HeroUnitButtonURL>" class="btn btn-primary btn-large">
                <mt:HeroUnitButtonLabel>
            </a>
        </p>
    </mt:If>
</div>
